{
  "name": "dev-env-model-typescript",
  "version": "1.0.0",
  "main": "index.ts",
  "author": "Yoichiro Hirano",
  "license": "MIT",
  "scripts": {
    "dev": "npm run develop:ts & npm run develop:pug",
    "build": "npm run prettier && npm run build:ts && npm run build:pug",
    "develop:ts": "NODE_ENV=development webpack --watch --mode development --display-error-details --progress --colors",
    "build:ts": "NODE_ENV=production webpack --mode production --display-error-details --progress --colors",
    "develop:pug": "pug ./src/pug/pages/*.pug --pretty -o ./dist -w",
    "build:pug": "pug ./src/pug/pages/*.pug --pretty -o ./dist",
    "test": "jest --watch --silent=false --verbose false",
    "prettier": "prettier --write './src/**/*.{ts,scss}'",
    "lint": "eslint ./src/ts/**/*.ts",
    "stylelint": "stylelint ./src/scss/**/*.scss --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@types/animejs": "^3.1.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/youtube": "^0.0.38",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.8.0",
    "autoprefixer": "^9.5.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "fibers": "^4.0.2",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^7.0.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "pug-plain-loader": "^1.0.0",
    "sass": "^1.23.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^4.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.7.2",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "url-loader": "^2.0.1",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "animejs": "^3.1.0",
    "core-js": "^3.2.1",
    "intersection-observer": "^0.7.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "ie": 11,
            "android": 4
          },
          "useBuiltIns": "usage",
          "corejs": {
            "version": 3,
            "proposals": true
          },
          "debug": true
        }
      ]
    ]
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 11",
    "Android >= 4.4",
    "safari >= 9"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "arrow-body-style": 0,
      "no-console": 0,
      "no-alert": 0,
      "no-debugger": 1,
      "no-param-reassign": 0,
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jquery": true,
      "jest": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "velocity": true,
      "_": true,
      "axios": true,
      "YT": true,
      "anime": true
    },
    "settings": {
      "import/extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx"
      ],
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-prettier",
      "stylelint-config-rational-order"
    ]
  }
}
