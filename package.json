{
  "name": "dev-env-model-typescript",
  "version": "1.0.0",
  "main": "index.ts",
  "author": "Yoichiro Hirano",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "ie >= 11",
    "Android >= 4.4",
    "safari >= 9"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-console": 0,
      "no-alert": 0,
      "no-debugger": 1,
      "@typescript-eslint/rule-name": "error"
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jquery": true,
      "jest": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "sourceType": "module"
    },
    "globals": {
      "velocity": true,
      "_": true,
      "axios": true,
      "YT": true,
      "anime": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    }
  },
  "scripts": {
    "dev": "npm-run-all -p build:pug 'develop:*' 'watch:*'",
    "build": "npm-run-all -p 'build:*'",
    "develop:js": "NODE_ENV=development webpack --watch --mode development --display-error-details --progress --colors",
    "build:js": "NODE_ENV=production webpack --mode production --display-error-details --progress --colors",
    "build:pug": "pug ./src/pug/pages/*.pug --pretty -o ./dist",
    "watch:pug": "chokidar './src/pug/**/*.pug' --command 'npm run build:pug'",
    "json-server": "json-server --watch db.json",
    "test": "jest --watch --silent=false --verbose false",
    "lint": "eslint ./src/js/**/*.js"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "autoprefixer": "^9.5.0",
    "chokidar-cli": "^1.2.2",
    "cpx": "^1.5.0",
    "css-loader": "^3.0.0",
    "cssnano": "^4.1.10",
    "eslint-config-airbnb": "^17.1.1",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "url-loader": "^2.0.1",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {}
}
